<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pineconeapps.paygenmanager">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".PaygenApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAg7mB8eYrpzkw6p35NdDiBTWE9Dqj9oes" />

        <activity
            android:name=".activity.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ConsumptionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AddItemsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.RegisterActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ProductsActivity"
            android:label="@string/title_products"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AddProductActivity"
            android:label="@string/title_products"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.EmployeesActivity"
            android:label="@string/title_employees"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AddEmployeeActivity"
            android:label="@string/title_employees"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_welcome"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ImageActivity"
            android:label="@string/title_visual_id"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SalesActivity"
            android:label="@string/title_sales"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SaleDetailsActivity"
            android:label="@string/title_sale_details"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.ChangePasswordActivity"
            android:label="@string/title_change_password"
            android:screenOrientation="portrait" />
    </application>

</manifest>